<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayMovie">
    //레이아웃 설정
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp">
        //이름 입력하는 edit text
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text">

            <requestFocus />
        </EditText>
        //별점 입력하는 edit text
        <EditText
            android:id="@+id/editTextRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextDirector"
            android:layout_below="@+id/editTextDirector"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="numberDecimal" />
        //영화 이름 텍스트 뷰 설정
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextName"
            android:layout_alignParentLeft="true"
            android:text="영화이름"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        //저장 버튼 설정
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:nestedScrollingEnabled="true"
            android:onClick="insert"
            android:text="save" />
        //평점 텍스트 뷰 설정
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextRating"
            android:layout_alignLeft="@+id/textView1"
            android:text="평점"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        //제작 연도 텍스트 뷰 설정
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextYear"
            android:layout_alignLeft="@+id/textView1"
            android:text="제작연도"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        //감독 텍스트 뷰 설정
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextRating"
            android:layout_alignLeft="@+id/textView5"
            android:text="감독"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        //별점 입력하는 edit text 설정
        <EditText
            android:id="@+id/editTextNation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editTextName"
            android:layout_below="@+id/editTextRating"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="text" />
        //국가 텍스트 뷰 설정
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextNation"
            android:layout_alignBottom="@+id/editTextNation"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/editTextRating"
            android:text="국가"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        //감독 입력하는 edit text
        <EditText
            android:id="@+id/editTextDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_below="@+id/editTextYear"
            android:ems="10"
            android:inputType="text">
        </EditText>
        //연도 입력하는 edit text
        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextDirector"
            android:layout_below="@+id/editTextName"
            android:ems="10"
            android:inputType="number" />
        //수정하는 버튼 설정
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:nestedScrollingEnabled="false"
            android:onClick="edit"
            android:text="UPDATE" />
        //삭제하는 버튼 설정
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:nestedScrollingEnabled="true"
            android:onClick="delete"
            android:text="DELETE" />

    </RelativeLayout>
</ScrollView>
